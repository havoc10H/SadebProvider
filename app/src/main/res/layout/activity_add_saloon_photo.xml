<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/RR_toolbaar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/backnew"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/iv_Back"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                </ImageView>

                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:id="@+id/sihn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/add_service"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>


                <RelativeLayout
                    android:layout_below="@+id/RR_toolbaar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RelativeLayout
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:elevation="@dimen/_20sdp"
                            android:id="@+id/RR_camera"
                            android:background="@drawable/whiteeditround"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            >

                            <ImageView
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/img_camera"
                                android:src="@drawable/camera"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                ></ImageView>

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/img_photo"
                                android:layout_below="@+id/img_camera"
                                android:textColor="@color/black"
                                android:layout_centerInParent="true"
                                android:text="@string/add_photo"
                                android:textSize="@dimen/_16sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>

                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_centerInParent="true"
                                android:layout_below="@+id/img_photo"
                                android:textColor="@color/black"
                                android:text="(0/7)"
                                android:visibility="gone"
                                android:id="@+id/no_selected_photo"
                                android:textSize="@dimen/_14sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/LL_one"
                            android:layout_below="@+id/RR_camera"
                            android:layout_margin="@dimen/_15sdp"
                            android:weightSum="3"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:id="@+id/RR_img_one"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/img_logo_one"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </ImageView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:id="@+id/RR_img_two"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/img_logo_two"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:text="Normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </ImageView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:id="@+id/RR_img_three"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >



                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/img_logo_three"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:text="Normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </ImageView>

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_below="@+id/LL_one"
                            android:layout_margin="@dimen/_10sdp"
                            android:weightSum="3"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:id="@+id/RR_img_five"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >


                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/imgLogoFour"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:text="Normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </ImageView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:id="@+id/RR_img_six"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >



                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/img_logo_five"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:text="Normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </ImageView>

                            </RelativeLayout>

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:visibility="visible"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/img_logo_six"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:text="Normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </ImageView>

                            </RelativeLayout>




                        </LinearLayout>

                        <LinearLayout
                             android:layout_below="@+id/LL_one"
                            android:layout_margin="@dimen/_10sdp"
                            android:weightSum="3"
                            android:visibility="gone"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:elevation="@dimen/_5sdp"
                                android:visibility="visible"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/white_rnd"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/img_logo_seven"
                                    android:textColor="@color/black"
                                    android:layout_centerInParent="true"
                                    android:text="Normal"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_100sdp">
                                </ImageView>

                            </RelativeLayout>



                        </LinearLayout>
                        <RelativeLayout
                            android:elevation="@dimen/_5sdp"
                            android:visibility="visible"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/white_rnd"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <ImageView
                                android:id="@+id/img_single"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:scaleType="centerCrop"
                                android:text="Normal"
                                android:textColor="@color/black"></ImageView>
                        </RelativeLayout>


                        <TextView
                            android:layout_alignParentBottom="true"
                            android:id="@+id/continew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/_20sdp"
                            android:background="@drawable/bg_blue_border"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/next"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                </RelativeLayout>


        </RelativeLayout>




</layout>
